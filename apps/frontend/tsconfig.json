{
  "extends": "tsconfig/frontend.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "contexts/*": [
        "context/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "lib/*": [
        "lib/*"
      ],
      "animations/*": [
        "animations/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src",
    "next-env.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo"
  ]
}
